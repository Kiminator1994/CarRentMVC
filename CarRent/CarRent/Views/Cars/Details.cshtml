@model Car
@{
    ViewData["Title"] = "Car";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Reservation</title>
</head>
<body>
    <div class="container">
        <h1>Car Details</h1>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" type="text" class="form-control"/>               
            </div>
            <div class="form-group">
                <label asp-for="ModelType" class="control-label"></label>
                <input asp-for="ModelType" type="text" class="form-control"/>                
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>

                @{decimal price = (decimal)Model.Category;}
                <input type="text" placeholder="@Html.DisplayFor(modelItem => price)" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nr" class="control-label"></label>
                <input asp-for="Nr" type="text" class="form-control" />                
            </div>          
    </div>
</body>
</html>
