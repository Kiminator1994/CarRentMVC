@model Car
@{
    ViewData["Title"] = "Car";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Reservation</title>
    <style>
        /* CSS style to set the height of the textarea */
        textarea {
            height: 150px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Car Details</h1>
        <form asp-action="Details" method="post">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" readonly></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Nr" class="control-label"></label>
                <input asp-for="Nr" type="text" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" type="text" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ModelType" class="control-label"></label>
                <input asp-for="ModelType" type="text" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                @{
                    decimal price = (decimal)Model.Category;
                }
                <input type="text" placeholder="@Html.DisplayFor(modelItem => price)" class="form-control" />
            </div>
            <div class="fixed-bottom text-end" style="margin: 0px 25px 75px 0px">
                <button class="btn btn-danger" type="submit" asp-route-id="@Model.Id">Remove Car</button>
            </div>
        </form>
        <div class="fixed-bottom text-end" style="margin: 0px 150px 75px 0px">
            <a class="btn btn-secondary" asp-action="Back">&#8592 Back</a>
        </div>
    </div>
</body>
</html>
