@model IEnumerable<Reservation>
@{
    ViewData["Title"] = "Reservation";
}
<div class="col-md-8 offset-md-2 ">
    <table class="table">
        <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.Nr)</th>
                <th>@Html.DisplayNameFor(model => model.Customer.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Customer.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Car.Nr)</th>
                <th>@Html.DisplayNameFor(model => model.Car.Brand)</th>
                <th>@Html.DisplayNameFor(model => model.Car.ModelType)</th>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                <th>@Html.DisplayNameFor(model => model.TotalFee)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">

                    <td class="align-middle">@Html.DisplayFor(Item => item.Nr)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Customer.FirstName)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Customer.LastName)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Car.Nr)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Car.Brand)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Car.ModelType)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.StartDate)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.EndDate)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.TotalFee)</td>
                    <td class="align-middle">
                        <a class="btn btn-success" asp-action="Create" asp-controller="RentalContracts" asp-route-resId="@item.Id"><i class="bi bi-plus"></i>Add Contract</a>
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@{
    var alertMessage = TempData["AlertMessage"] as string;
    if (!string.IsNullOrEmpty(alertMessage))
    {
        <script>
            alert("@alertMessage");
        </script>
    }
}

