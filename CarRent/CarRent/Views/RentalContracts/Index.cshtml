@using CarRent.Models;
@model IEnumerable<RentalContract>
@{
    ViewData["Title"] = "RentalContract";
}
<div class="col-md-8 offset-md-2 ">
    <table class="table">
        <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.Nr)</th>
                <th>@Html.DisplayNameFor(model => model.Reservation.Customer.Nr)</th>
                <th>@Html.DisplayNameFor(model => model.Reservation.Customer.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Reservation.Customer.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Reservation.Car.Nr)</th>
                <th>@Html.DisplayNameFor(model => model.Reservation.Car.Brand)</th>
                <th>@Html.DisplayNameFor(model => model.Reservation.Car.ModelType)</th>
                <th>@Html.DisplayNameFor(model => model.Reservation.Nr)</th>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                <th>@Html.DisplayNameFor(model => model.TotalFee)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">

                    <td class="align-middle">@Html.DisplayFor(Item => item.Nr)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Reservation.Customer.Nr)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Reservation.Customer.FirstName)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Reservation.Customer.LastName)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Reservation.Car.Nr)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Reservation.Car.Brand)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Reservation.Car.ModelType)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.Reservation.Nr)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.StartDate)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.EndDate)</td>
                    <td class="align-middle">@Html.DisplayFor(Item => item.TotalFee)</td>

                    <td class="align-middle">
                        <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
